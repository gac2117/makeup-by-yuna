<center>
<div id='flash' class='error'>
  <%= flash[:error] %>
</div>
<br>

<div class="card" style="width:600px">
  <div class="card-header">Sign In</div>
  <div class="card-body">
	<%= bootstrap_form_for @user, url: "/signin" do |f| %>
	  <%= f.text_field :email %>
	  <%= f.password_field :password %>
	  <br>
	  <%= f.submit "Sign In" %>
	<% end %>
  </div>
</div>



<hr>
<h4>Or</h4>
<a href="/auth/facebook"><img src="https://scontent-atl3-1.xx.fbcdn.net/v/t39.2365-6/17639236_1785253958471956_282550797298827264_n.png?_nc_cat=105&_nc_ht=scontent-atl3-1.xx&oh=b196524687d8f32a91f1f08702c26ddb&oe=5D51E9EA" style="width:200px;height:35px;"></a>
</center>