<%= form_for @app do |f| %>
  <%= f.label 'Date and Time' %><br>
  <%= f.datetime_field :date_time, min: Date.today %><br><br>

  <%= f.label 'Service' %><br>
  <%= f.radio_button :service, "Consultation" %>
  <%= label_tag(:service_consultation, "Consultation") %>
  <%= f.radio_button :service, "Event" %>
  <%= label_tag(:service_event, "Event") %>
  <br><br>

  <%= f.label 'Comments / Requests' %><br>
  <%= f.text_field :comments %><br><br>

  <%= f.label 'Makeup Artist' %><br>
  <%= f.collection_select(:artist_id, Artist.all, :id, :name) %><br><br>
  <%= f.hidden_field :client_id, :value => @client.id %>
  <%= f.submit "Submit" %>
<% end %>