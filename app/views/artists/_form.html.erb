<%= bootstrap_form_for @artist, layout: :horizontal, label_col: "col-sm-4", control_col: "col-sm-8" do |f| %>
  <%= f.text_field :name %>
  <%= f.text_field :email %>
  <%= f.text_field :extra, label: "Short Bio" %>
  <%= f.password_field :password %>
  <%= f.text_field :secret, label: "What is the secret code?" %>

  <%= f.submit "Submit", class: "btn btn-warning" %>
<% end %>
