<center>
<h1>Sign In</h1>
<div id='flash' class='error'>
  <%= flash[:error] %>
</div>
<br>
<%= form_for @user, url: "/signin" do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %><br><br>

  <%= f.label :password %>
  <%= f.password_field :password %><br><br>

  <%= f.submit "Sign In" %>
<% end %>
<br><br>
<hr>
<h1>Sign Up</h1>
Click here to sign up as a new <%= link_to "Client", new_client_path %><br>
Click here to sign up as a new <%= link_to "Makeup Artist", new_artist_path %>
<hr>
<h4>Or</h4><br>
