<%= bootstrap_form_for @client, layout: :horizontal, label_col: "col-sm-4", control_col: "col-sm-8" do |f| %>
  <%= f.text_field :name, label: "Name:" %>
  <%= f.text_field :email, label: "Email Address:" %>
  <%= f.text_field :extra, label: "URL of profile picture:" %>
  <%= f.password_field :password, label: "Password:" %>
  <%= f.submit "Sign Up", class: "btn btn-warning btn-block" %>
<% end %>
