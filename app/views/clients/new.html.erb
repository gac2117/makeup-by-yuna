<center>
<h5 style="color:#F8F9FA">SIGN UP AS A CLIENT<br>_____________</h5><br>
<% if @client.errors.any? %>
  <div id="error_explanation">
    <p>
      <%= pluralize(@client.errors.count, "error") %>
      prohibited this appointment from being saved:
    </p>
    <ul>
    <% @client.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<br>

<div class="card" style="width:600px">
  <div class="card-body">
    <%= render 'form' %>
  </div>
</div>
<br>
</center>
